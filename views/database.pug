extends layout

block title
    = `数据库 - ${title}`

block import
    script(src=`${staticURL}/js/core/database.js`)
    script(src=`${staticURL}/js/views/database/animation-list.js`)
    script(src=`${staticURL}/js/views/database/animation-new.js`)
    script(src=`${staticURL}/js/views/database/animation-detail.js`)
    script(src=`${staticURL}/js/views/database/tag-list.js`)
    script(src=`${staticURL}/js/views/database/tag-new.js`)
    script(src=`${staticURL}/js/views/database/tag-detail.js`)
    script(src=`${staticURL}/js/views/database/staff-list.js`)
    script(src=`${staticURL}/js/views/database/staff-new.js`)
    script(src=`${staticURL}/js/views/database/staff-detail.js`)

block content
    style.
        .view-div {display: none}
    div#main.ui.container
        div#animation-list.view-div
            include database/animation-list
        div#animation-new.view-div
            include database/animation-new
        div#animation-detail.view-div
            include database/animation-detail
        div#tag-list.view-div
            include database/tag-list
        div#tag-new.view-div
            include database/tag-new
        div#tag-detail.view-div
            include database/tag-detail
        div#staff-list.view-div
            include database/staff-list
        div#staff-new.view-div
            include database/staff-new
        div#staff-detail.view-div
            include database/staff-detail
        div#not-found.ui.placeholder.segment.view-div(style='display: none')
            div.ui.icon.header
                i.close.icon
                = '404 Not Found'